# ===========================================
# KIRO Bot Constructor - Environment Config
# ===========================================

# Основные настройки сервера
PORT=3000
NODE_ENV=development
HOST=localhost

# Безопасность
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-too
ENCRYPTION_KEY=your-32-character-encryption-key

# База данных (SQLite по умолчанию)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/database.sqlite

# Для PostgreSQL (опционально)
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://username:password@localhost:5432/kiro_bots

# Для MySQL (опционально)
# DATABASE_TYPE=mysql
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=kiro_bots
# DATABASE_USER=root
# DATABASE_PASSWORD=password

# Telegram API настройки
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_WEBHOOK_DOMAIN=https://yourdomain.com
TELEGRAM_WEBHOOK_PATH=/webhook

# MAX Messenger API (опционально)
MAX_API_KEY=your-max-api-key
MAX_SECRET_KEY=your-max-secret-key
MAX_WEBHOOK_URL=https://yourdomain.com/webhook/max

# WhatsApp Business API (опционально)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Discord Bot API (опционально)
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Логирование
LOG_LEVEL=info
LOG_FILE=./data/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Файловое хранилище
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv,json

# Redis (для кэширования, опционально)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Email настройки (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourdomain.com

# Webhook настройки
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS настройки
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Backup настройки
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./data/backups

# Мониторинг и аналитика
ANALYTICS_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Развертывание
DEPLOYMENT_MODE=local
DOCKER_ENABLED=false
KUBERNETES_ENABLED=false

# Интеграции
INTEGRATIONS_ENABLED=true
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Безопасность
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Отладка
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# Кэширование
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Webhook URLs для внешних сервисов
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# API ключи для внешних сервисов
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
YANDEX_API_KEY=your-yandex-api-key

# Дополнительные настройки
TIMEZONE=Europe/Moscow
LANGUAGE=ru
CURRENCY=RUB

# ===========================================
# ВАЖНО: Не забудьте изменить все секретные
# ключи перед развертыванием в продакшене!
# ===========================================